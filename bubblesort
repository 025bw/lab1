#include <stdio.h>

int main()
{
    int array[ 10 ]; /* n is an array of 10 integers */
   int i,j;
 
   /* initialize elements of array n to 0 */         
   for ( i = 0; i < 10; i++ ) {
      array[ i ] = -i + 100; /* set element at location i to i + 100 */
   }
   int size = 10;
int CountSorted=0;
	printf("\nall array element:\n");
	for(j=0;j<size;j++)
	{
	printf("%d ",array[j]);
	}
for(i=0;i<size-1;i++)
{

	
	

	printf("\nunsorted element:\n");
	for(j=0;j<size-CountSorted;j++)
	{
	printf("%d ",array[j]);
	}
	printf("\nfirst to second last unsorted element:\n");
	for(j=0;j<size-1-CountSorted;j++)
	{
	printf("%d ",array[j]);
	}
	for(j=0;j<size-1-CountSorted;j++)
	{
	    if(array[j]>array[j+1]){
	        int temp = array[j+1];
	        array[j+1]=array[j];
	        array[j]=temp;
	    }
	}
	CountSorted++;
		printf("\nall array element after this loop:\n");
	for(j=0;j<size;j++)
	{
	printf("%d ",array[j]);
	}


}
    return 0;
}
